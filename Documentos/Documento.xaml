<Window x:Class="Documentos.Documento"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Documentos"
        mc:Ignorable="d"
        Title="Documento" Height="500" Width="500" Closing="Window_Closing" Icon="hoja.ico">
    <DockPanel>
        <Border Padding="5" DockPanel.Dock="Bottom">
            <Button x:Name="GuardarButton" Click="GuardarButton_Click">Guardar</Button>
            
        </Border>
        <TextBox x:Name="TextoTextBox" TextWrapping="Wrap"  AcceptsReturn="True"></TextBox>
        
    </DockPanel>
</Window>
